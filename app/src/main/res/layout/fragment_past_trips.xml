<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.PastTripsFragment">

   <com.jjoey.transportr.utils.EmptyRecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/pastTripsRV"/>

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:src="@drawable/oops"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_trips_yet"
            android:textSize="20sp"
            android:textColor="@color/otp_gray"
            android:textAlignment="center"
            android:fontFamily="casual"/>

        <Button
            android:id="@+id/makeTripBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_btn_bkg"
            android:padding="10dp"
            android:text="@string/make_trip"
            android:textAllCaps="false"
            android:textColor="@color/otp_gray"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

</RelativeLayout>